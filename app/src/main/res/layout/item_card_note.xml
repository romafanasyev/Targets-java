<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:padding="12dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/card_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                style="?android:attr/borderlessButtonStyle" />
        </LinearLayout>

        <TextView
            android:id="@+id/card_m_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_m_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title"
            android:inputType="textCapSentences"
            android:minLines="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/transparent"/>

        <EditText
            android:id="@+id/card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:inputType="textCapSentences|textMultiLine"
            android:minLines="1"
            android:textSize="18sp"
            android:backgroundTint="@color/transparent"/>

        <LinearLayout
            android:id="@+id/edit_mode_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/add_image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:src="@drawable/ic_insert_photo_black_24dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
            <ImageButton
                android:id="@+id/add_picture"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:src="@drawable/ic_palette_black_24dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
            <ImageButton
                android:id="@+id/add_question"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:src="@drawable/ic_live_help_black_24dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
            <ImageButton
                android:id="@+id/add_divider"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:src="@drawable/ic_remove_black_24dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
            <ImageButton
                android:id="@+id/add_link"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:src="@drawable/ic_offline_pin_black_24dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
            <ImageButton
                android:id="@+id/main_funcs"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:tint="@color/colorAccent"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="6dp"
    android:layout_margin="3dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/card_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_mode_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/add_image"
                style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_insert_photo_black_24dp" />

            <ImageButton
                android:id="@+id/add_picture"
                style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_create_black_24dp" />

            <ImageButton
                android:id="@+id/add_question"
                style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_live_help_black_24dp" />

            <ImageButton
                android:id="@+id/add_divider"
                style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_remove_black_24dp" />

            <ImageButton
                android:id="@+id/main_funcs"
                style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:tint="@color/colorAccent" />
        </LinearLayout>

        <TextView
            android:id="@+id/card_m_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title"
            android:inputType="textCapSentences"
            android:minLines="1"
            android:scrollbars="vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/transparent"/>
        <EditText
            android:id="@+id/add_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_point"
            android:inputType="textCapSentences"
            android:minLines="1"
            android:scrollbars="vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/transparent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>